<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/ivUserPhotoDetail"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nombre del usuario"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email del usuario"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:id="@+id/tvUserEmailDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="DirecciÃ³n del usuario"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:id="@+id/tvUserAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nivel del usuario"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:id="@+id/tvUserLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Puntos del usuario"
        android:textColor="@color/light_background_main"/>

    <TextView
        android:id="@+id/tvUserPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_background_main"/>

    <Button
        android:id="@+id/btnViewAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ver las citas del usuario"
        android:backgroundTint="@color/dark_background_main"
        android:textColor="@color/light_background_main"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Volver"
        android:backgroundTint="@color/dark_background_main"
        android:textColor="@color/light_background_main"/>
</LinearLayout>
