<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema personalizado para CalendarView -->
    <style name="CustomCalendarView" parent="android:Widget.Material.CalendarView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayText</item>
    </style>

    <!-- Estilo para los días del calendario -->
    <style name="CalendarDateText" parent="TextAppearance.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Estilo para los nombres de los días de la semana -->
    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>